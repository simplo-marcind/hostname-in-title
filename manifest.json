{
  "manifest_version": 3,
  "name": "Hostname in Title",
  "version": "1.0",
  "description": "Adds hostname to the page title.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
